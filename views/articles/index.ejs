<html>
    <head>
            <link rel="stylesheet" 
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
            integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
             crossorigin="anonymous">


    </head>

    <body>
            <header>
                    <% include ../partials/header %>
            </header>
        <h1 align="center">List of Articles</h1>
        <% for(var i=0; i < data.length; i++) { %>
            <div class="row">
                <div class="col-xs-8 col-xs-offset-2">
                    <div class="well well-lg">
                        <div class="article-title">
                              <a href="">  <%= data[i].title %></a>
                        </div>
                        <div class="article-body">
                                <%= data[i].discription %>

                                <div class="article-meta-info">
                                        <small>Created at  <%= data[i].createdAt %>,
                                        last update : <%=data[i].updatedAt %> ago
                                 
                                         </small>
                                </div>
                        </div>

                        <div class="articles-actions">

                                <a class="btn btn-xs btn-success"  href="articles/edit/<%=data[i]._id%>">Edit</a>                  
                                <button class="btn btn-xs btn-warning" id="delete_article" 
                                data-id="<%=data[i]._id%>"> Delete</button>
                              

                             </div>

                    </div>

                </div>    
            
            </div>    
        <% } %>
        
        
    </body>
</html>