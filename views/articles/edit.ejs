<html>
    <head>
            <link rel="stylesheet" 
            href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 
            integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u"
             crossorigin="anonymous">

             <link href="css/style.css" rel="stylesheet" type="text/css" >

    </head>

    <body>
            <header>
                    <% include ../partials/header %>
            </header>

            <h1 align="center"> Edit Existing Article</h1>
            <form method="POST" action="../api/article">
                <div class="col-xs-6">
                        <div class="form-group">
                                <label for="title">Title:</label>
                                <input value="<%=article.title%>" type="text" class="form-control" name="title">
                        </div>
                        <div class="form-group">
                                <label for="author">Author:</label>
                                <input value="<%=article.author%>" type="text" class="form-control" 
                                name="author" id="author">
                                <input value="<%=article.id%>" name="id"  type="hidden">

                        </div>
                        <div class="form-group">
                                <label for="desc">Discription:</label>
                                <textarea  class="form-control" name="desc" ><%=article.discription%> </textarea>
                        </div>
    
                               
                        <button type="submit" class="btn btn-default">Submit</button>
    
    
                </div>
            </form>
        
        
    </body>
</html>